<image src="../../img/bg.png" mode="" class="bg" />
<view class="wrapper">
    <view wx:if="{{true}}">
        <view class="countdown-title"> 开奖倒计时 </view>
        <view class="countdown-box">
            <t-count-down t-class-count="external-count" t-class-split="external-split" content="default" time="{{ time }}" splitWithUnit millisecond size="large" />
        </view>
        <view class="btn-join" wx:if="{{!join && !open}}" bindtap="joinActivity">
            立即参与抽奖
        </view>
        <view class="btn-is-join" wx:if="{{join && !open}}">
            已参与
        </view>
        <view class="btn-win" wx:if="{{join && open && !win}}">
            未中奖
        </view>
        <view class="btn-is-win" wx:if="{{join && open && win}}">
            已中奖：{{prizeName}}
        </view>
        <view class="text">
            {{activityInfo.activityDesc}}
        </view>
        <view class="prizeList">
            <view class="prizeTitle">
                奖品列表
            </view>
            <view class="prizeListItem">
            <block wx:for="{{activityInfo.prizeList}}">
                <view>{{(index+1)+"."+item.prizeName +" * " + item.count}}</view>
            </block>
            </view>
        </view>
    </view>
</view>